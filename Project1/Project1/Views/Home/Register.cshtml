@model Project1.Models.Registration

<h1>Register</h1>
<h2>Create a new account.</h2>
<hr />

<div class="row">
    <div class="col-md-4">
        <form class="form-horizontal" asp-action="Register">
            <div class="form-group">
                <label asp-for="Email" class="col-form-label">Email</label>
                <input asp-for="Email" type="text" class="form-control input-validation-error"
                        id="Email" name="Email" autofocus="autofocus"
                        data-val="true" data-val-required="Please enter your email address" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="col-form-label">Password</label>
                <input asp-for="Password" type="password" class="form-control input-validation-error" id="Password" name="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password2" class="col-form-label">Confirm Password</label>
                <input asp-for="Password2" type="password" class="form-control input-validation-error" id="Password2" name="Password2" />
                <span asp-validation-for="Password2" class="text-danger"></span>
            </div>
            <div>
                <input type="submit" value="Submit" class="btn btn-outline-dark" />
            </div>
        </form>
    </div>
</div>
<hr />