@model Project1.Models.UserLogin

<h1>Log in</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div class="form-group">
                <label asp-for="UserEmail" class="col-form-label">Email</label>
                <input asp-for="UserEmail" type="text" class="form-control input-validation-error" id="Email" name="Email" data-val="true" data-val-required="Please enter your email address" />
                <span asp-validation-for="UserEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserPassword" class="col-form-label">Password</label>
                <input asp-for="UserPassword" type="password" class="form-control input-validation-error" id="Password" name="Password" />
                <span asp-validation-for="UserPassword" class="text-danger"></span>
            </div>
            <div>
                <input type="submit" value="Log in" class="btn btn-outline-dark" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-for="Register" class="page-link border-0" asp-area="" asp-controller="Home" asp-action="Register">Register a new user</a>
</div>
